<h1>Current Stylists</h1>

@if (@Model.Count == 0)
{
    <h3>No stylists have been added yet!</h3>
}

@foreach (var stylist in @Model)
{
    <h3>More about your stylist: <a href='/stylists/@stylist.GetId()'>@stylist.GetName()</a></h3>
}

