<h1>Our Specialties</h1>

<ul>
    <li>Hair Cut</li>
    <li>Hair Color and Highlights</li>
    <li>Hair Perm</li>
</ul>

@if (@Model.Count == 0)
{
    <h3>No specialties have been added yet!</h3>
}

@foreach (var stylist in Model)
{
    <ul>
        <li>
            <h3>
                <a href='/stylists/@stylist.GetId()'>
                    @stylist.GetName()
                </a> <br/>
                     <h4>Specialties:</h4>

                     <ul>
                         @foreach (var specialty in Model.GetSpecialties())
                         {
                            <li>@specialty.GetDescription()</li>
                         }
                      </ul>
</h3>

            <form action='/stylists/@stylist.GetId()/delete' method='post'>
                <button type='submit'>Delete</button>
            </form>

        </li>
    </ul>
}

<h3>Click on the specialty to see our stylists with these specialties</h3>
<h3><a href='/stylists/new'>Add a new specialty</a></h3>
<h3><a href='/'>Return home</a></h3>
