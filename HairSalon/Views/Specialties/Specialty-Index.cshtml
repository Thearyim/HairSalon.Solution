@{
    Layout = "_Layout";
}

@Html.Partial("_Header");

<div class="container">
    @if (@Model.Count == 0)
    {
        <h3>No specialties have been added yet!</h3>
    }
    else
    {
        <form method="post">
            <div style="float:right;">
                <button formaction="/specialties/delete" class="btn btn-link" type="submit">delete all</button>
            </div>
        </form>

        <form method="post">
            <ul>
                @foreach (var specialty in Model)
                {
                    <li>@specialty.GetDescription() <button formaction='/specialties/@specialty.GetId()/delete' class="btn btn-link"> Delete</button></li>
                }
            </ul>
        </form>

        }

        <form action="/specialties" method="post">
            <label for="specialtyDescription">Add Specialty:</label>
            <input type="text" id="specialtyDescription" name="specialtyDescription" /> <button type="submit" class="btn btn-link">Add</button>
        </form>
    </div>
