<h1>List of Specialties</h1>

@if (@Model.Count == 0)
{
    <h3>No specialties have been added yet!</h3>
}
    <ul>
        @foreach (var specialty in Model)
        {
            <li><a href="/stylists/specialties/@specialty.GetId()">@specialty.GetDescription()</a></li>

        }
    </ul>

    <form action="/specialties" method="post">

        <label for="specialtyDescription">Add Specialty:</label>
        <input type="text" id="specialtyDescription" name="specialtyDescription" />
        <button type="submit">Add</button>
    </form>

<p><a href="/stylists">Back to view stylists</a></p>
<h3><a href='/'>Return home</a></h3>

