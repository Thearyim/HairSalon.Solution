<h1>Current Stylists</h1>

@if (@Model.Count == 0)
{
    <h3>No stylists have been added yet!</h3>
}

@if (@Model.Count > 0)
{
    <h5>Click on stylist to see client list</h5>
    <form action="/stylists/delete" method="post">
        <button type="submit">Delete All</button>
    </form>
}

<h5><a href='/stylists/new'>Add a new stylist</a></h5>

@foreach (var stylist in Model)
{
    <ul>
        <li>
            <h3>
                <a href='/stylists/@stylist.GetId()'>
                    @stylist.GetName()
                </a> <br />
                <p>Specialties: <a href="/specialties/new">add</a></p>

                <ul>
                    @foreach (var specialty in stylist.GetSpecialties())
                    {
                        <li>@specialty.GetDescription()</li>

                    }
                </ul>
            </h3>

            <form action='/stylists/@stylist.GetId()/delete' method='post'>
                <button type='submit'>Delete</button>
            </form>
        </li>
    </ul>
}

@if (@Model.Count > 0)
{
    <h3><a href="/clients">Register Clients</a></h3>
}

<h3><a href='/'>Return home</a></h3>